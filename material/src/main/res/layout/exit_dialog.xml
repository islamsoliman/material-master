<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:background="#ffffff">

    <com.rey.material.widget.TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="@string/exit"
        android:textAppearance="@style/label_editText"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
         />


    <com.rey.material.widget.TextView
        android:id="@+id/tv_exit_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exit"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:paddingTop="20dp"
        android:text="@string/exit_message"
        android:textAppearance="@style/label_editText"
        android:textColor="#7a7a7a"
        android:textSize="16sp"
        />

    <com.rey.material.widget.Button
        android:id="@+id/btnYes"
        style="@style/MenuItemRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_exit_confirm"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="#ffffff"
        android:minWidth="64dp"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:textColor="#5677fc"
        android:textSize="10pt"
        android:textStyle="bold" />

    <com.rey.material.widget.Button
        android:id="@+id/btnNo"
        style="@style/MenuItemRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_exit_confirm"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/btnYes"
        android:background="#ffffff"
        android:minWidth="64dp"
        android:text="@string/no"
        android:textAllCaps="false"
        android:textColor="#5677fc"
        android:textSize="10pt"
        android:textStyle="bold" />
</RelativeLayout>